{
  "Logging": {
    "IncludeScopes": false,
    "Debug": {
      "LogLevel": {
        "Default": "Warning"
      }
    },
    "Console": {
      "LogLevel": {
        "Default": "Warning"
      }
    },
    "Log4Net": {
      "Name": "API.Core"
    }
  },
  "AllowedHosts": "*",
  "Serilog": {
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Code, Serilog.Sinks.Console",
          "outputTemplate": "CreationTime:{Timestamp: HH:mm:ss.fff} Level:{Level} Info:{Message}{NewLine}{Exception}"

        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "MyLogs/log.txt",
          "rollingInterval": "Day",
          "outputTemplate": "CreationTime:{Timestamp: HH:mm:ss.fff} Level:{Level} Info:{Message}{NewLine}{Exception}"
        }
      }
    ]
  },
